{
  "node": true,
  "predef": ["-Promise"],
  "esnext": true,
  "bitwise": true,
  "undef": true,
  "newcap": false,
  "camelcase": false,
  "quotmark": "single",
  "expr": true,
  "eqeqeq": true, // Prohibit use of == and != in favor of === and !==.
  "validthis": true,
  "immed": true,
  "noarg": true,
  "undef": true,
  "unused": "vars",
  "strict": true,
  "laxcomma": "true",
  "globals": {
    "it": false,
    "xit": false,
    "describe": false,
    "xdescribe": false,
    "before": false,
    "after": false,
    "beforeEach": false,
    "afterEach": false
  }
}
